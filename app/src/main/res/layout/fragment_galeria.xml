<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.GaleriaFragment">

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/txtTituloPatogeno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#AFE4C6"
            android:text="Ejemplo patogeno"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="22dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivTituloPatogeno"
            android:layout_width="match_parent"
            android:layout_height="@dimen/alto_img"
            android:scaleType="fitXY"
            android:src="@drawable/mas"
            android:layout_weight="6"></ImageView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGaleria"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/alto_img"
            android:layout_gravity="center_horizontal"
            android:layout_weight="4"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:textAlignment="center" />

    </LinearLayout>

</FrameLayout>